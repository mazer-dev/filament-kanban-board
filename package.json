{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "npx @tailwindcss/cli@latest -i resources/css/index.css -o resources/dist/filament-kanban-board.css --postcss --watch",
        "build:styles": "npx @tailwindcss/cli@latest -i resources/css/index.css -o resources/dist/filament-kanban-board.css --postcss --minify && npm run purge",
        "dev:js": "esbuild resources/js/index.js --bundle --outfile=resources/dist/filament-kanban-board.js --watch",
        "build:js": "esbuild resources/js/index.js --bundle --outfile=resources/dist/filament-kanban-board.js --minify",
        "purge": "filament-purge -i resources/dist/filament-kanban-board.css -o resources/dist/filament-kanban-board.css -v 3.x",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.1",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "autoprefixer": "^10.4.21",
        "esbuild": "^0.19.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "postcss-import": "^15.1.0",
        "prettier": "^2.7.1",
        "tailwindcss": "^4.1.11"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.11",
        "laravel-vite-plugin": "^2.0.0"
    }
}
